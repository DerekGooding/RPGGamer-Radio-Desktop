<Page
    x:Class="RPGGamer_Radio_Desktop.Views.Pages.SongsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:RPGGamer_Radio_Desktop.Helpers"
    xmlns:local="clr-namespace:RPGGamer_Radio_Desktop.Views.Pages"
    xmlns:models="clr-namespace:RPGGamer_Radio_Desktop.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SongsPage"
    d:DataContext="{d:DesignInstance local:SongsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Page.Resources>

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <ui:TextBox Text="{Binding ViewModel.Search}" PlaceholderText="eg: 420" Width="200"/>
            <ui:Button Content="Go" Command="{Binding ViewModel.PlayByIDCommand}"/>
            <ui:Button Content="Pause" Command="{Binding ViewModel.PauseCommand}"/>
            <ui:Button Content="Next" Command="{Binding ViewModel.PlayRandomSongCommand}"/>
        </StackPanel>
        <TextBlock Text="{Binding ViewModel.Status, Mode=OneWay}" />
        <!--<Grid>
            <ui:ListView ItemsSource="{Binding ViewModel.ImageSources}">
                
            </ui:ListView>
        </Grid>-->
        <!--<Grid>
            <ui:ListView ItemsSource="{Binding ViewModel.Titles}">
                
            </ui:ListView>
        </Grid>-->
        <Grid>
            <ItemsControl 
                ItemsSource="{Binding ViewModel.SongImages, Mode=OneWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:SongImage}">
                        <ui:Button Command="{Binding DataContext.ViewModel.PlayByButtonCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                                   CommandParameter="{Binding Song}"
                                   IsHitTestVisible="True"
                                   Focusable="False"
                                   Width="150" Height="250">
                            <ui:Button.Content>
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
                                        <TextBlock Text="{Binding Song.Title, Mode=OneWay}" TextWrapping="WrapWithOverflow"/>
                                        <TextBlock Text="{Binding Song.Game, Mode=OneWay}" TextWrapping="WrapWithOverflow"/>
                                    </StackPanel>
                                    <Image Source="{Binding Source}"/>
                                </DockPanel>
                            </ui:Button.Content>
                        </ui:Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl >
        </Grid>

    </StackPanel>
</Page>
